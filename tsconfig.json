{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "declaration": true,
      "noImplicitAny": true,
      "sourceMap": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.js",
      "node_modules",
      "dist"
    ],
    "typeAcquisition": {
        "enable": true
    }
  }
  